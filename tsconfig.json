{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "rootDir": "src",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "strict": true,
        /* Additional Checks */
        "noUnusedLocals": true,
        "noImplicitAny": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/resultview/html",
        "src/resultview/htmlcontent",
        "node_modules",
        ".vscode-test"
    ]
}