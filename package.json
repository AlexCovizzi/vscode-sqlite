{
    "name": "vscode-sqlite",
    "displayName": "SQLite",
    "description": "",
    "version": "0.0.1",
    "publisher": "alexcvzz",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.openDatabase",
        "onCommand:extension.closeDatabase",
        "onCommand:extension.showExplorer",
        "onCommand:extension.hideExplorer",
        "onCommand:extension.addToExplorer",
        "onCommand:extension.removeFromExplorer",
        "onCommand:extension.refreshExplorer",
        "onLanguage:sqlite"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.openDatabase",
                "title": "Open SQLite DB"
            },
            {
                "command": "extension.closeDatabase",
                "title": "Close SQLite DB"
            },
            {
                "command": "extension.refreshExplorer",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
		"views": {
			"explorer": [
				{
					"id": "extension.sqliteExplorer",
                    "name": "SQLite Explorer",
                    "when": "extension.showExplorer"
				}
            ]
        },
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceLangId == sqlite",
                    "command": "extension.openDatabase",
                    "group": "navigation"
                }
            ],
            "view/title": [
                {
                    "command": "extension.refreshExplorer",
                    "when": "view == extension.sqliteExplorer",
                    "group": "navigation@1"
                }
            ],
            "view/item/context": [
                {
                    "command": "extension.closeDatabase",
                    "when": "view == extension.sqliteExplorer && viewItem == extension.databaseItem"
                }
            ]
        },
        "languages": [
            {
                "id": "sqlite",
                "extensions": [
                    ".db",
                    ".sqlite"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "dblite": "^0.8.0"
    }
}
