{
    "name": "vscode-sqlite",
    "displayName": "vscode-sqlite",
    "description": "",
    "version": "0.0.1",
    "publisher": "alexcvzz",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.openDb",
        "onLanguage:db",
        "onLanguage:sqlite"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.openDb",
                "title": "Open SQLite DB"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceLangId == db",
                    "command": "extension.openDb",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == sqlite",
                    "command": "extension.openDb",
                    "group": "navigation"
                }
            ]
        },
        "languages": [
            {
                "id": "db",
                "extensions": [
                    ".db"
                ]
            },
            {
                "id": "sqlite",
                "extensions": [
                    ".sqlite"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "dblite": "^0.8.0"
    }
}
