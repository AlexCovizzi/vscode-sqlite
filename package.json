{
    "name": "vscode-sqlite",
    "icon": "resources/icon/icon_128x128.png",
    "displayName": "SQLite",
    "description": "Explore and query SQLite databases.",
    "version": "0.6.0",
    "publisher": "alexcvzz",
    "repository": {
        "url": "https://github.com/AlexCovizzi/vscode-sqlite",
        "type": "git"
    },
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:sql",
        "onLanguage:sqlite",
        "onLanguage:db",
        "onCommand:sqlite.showOutputChannel",
        "onCommand:sqlite.explorer.add",
        "onCommand:sqlite.explorer.remove",
        "onCommand:sqlite.newQuery",
        "onCommand:sqlite.quickQuery",
        "onCommand:sqlite.useDatabase",
        "onCommand:sqlite.runDocumentQuery"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "sqlite.showOutputChannel",
                "title": "Show output",
                "category": "SQLite"
            },
            {
                "command": "sqlite.explorer.add",
                "title": "Open Database",
                "category": "SQLite"
            },
            {
                "command": "sqlite.explorer.remove",
                "title": "Close Database",
                "category": "SQLite"
            },
            {
                "command": "sqlite.explorer.refresh",
                "title": "Refresh Databases",
                "category": "SQLite",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "sqlite.explorer.copyName",
                "title": "Copy Name",
                "category": "SQLite"
            },
            {
                "command": "sqlite.explorer.copyPath",
                "title": "Copy Path",
                "category": "SQLite"
            },
            {
                "command": "sqlite.explorer.copyRelativePath",
                "title": "Copy Relative Path",
                "category": "SQLite"
            },
            {
                "command": "sqlite.useDatabase",
                "title": "Use Database",
                "category": "SQLite"
            },
            {
                "command": "sqlite.newQuery",
                "title": "New Query",
                "category": "SQLite",
                "icon": {
                    "light": "resources/light/newquery.svg",
                    "dark": "resources/dark/newquery.svg"
                }
            },
            {
                "command": "sqlite.newQuerySelect",
                "title": "New Query [Select]",
                "category": "SQLite",
                "icon": {
                    "light": "resources/light/newquery.svg",
                    "dark": "resources/dark/newquery.svg"
                }
            },
            {
                "command": "sqlite.newQueryInsert",
                "title": "New Query [Insert]",
                "category": "SQLite"
            },
            {
                "command": "sqlite.quickQuery",
                "title": "Quick Query",
                "category": "SQLite"
            },
            {
                "command": "sqlite.runDocumentQuery",
                "title": "Run Query",
                "category": "SQLite"
            },
            {
                "command": "sqlite.runTableQuery",
                "title": "Show Table",
                "category": "SQLite",
                "icon": {
                    "light": "resources/light/runquery.svg",
                    "dark": "resources/dark/runquery.svg"
                }
            },
            {
                "command": "sqlite.runSqliteMasterQuery",
                "title": "Show sqlite_master",
                "category": "SQLite",
                "icon": {
                    "light": "resources/light/runquery.svg",
                    "dark": "resources/dark/runquery.svg"
                }
            }
        ],
        "keybindings": [
            {
                "command": "sqlite.runDocumentQuery",
                "key": "ctrl+shift+q",
                "mac": "cmd+shift+q",
                "when": "editorLangId =~ /(sql|sqlite)/"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "sqlite.explorer",
                    "name": "SQLite Explorer",
                    "when": "sqlite.explorer.show"
                }
            ]
        },
        "menus": {
            "commandPalette": [
                {
                    "command": "sqlite.showOutputChannel",
                    "group": "sqlite"
                },
                {
                    "command": "sqlite.explorer.add",
                    "group": "sqlite"
                },
                {
                    "command": "sqlite.explorer.remove",
                    "group": "sqlite",
                    "when": "sqlite.explorer.show"
                },
                {
                    "command": "sqlite.explorer.refresh",
                    "group": "sqlite",
                    "when": "sqlite.explorer.show"
                },
                {
                    "command": "sqlite.newQuery",
                    "group": "sqlite"
                },
                {
                    "command": "sqlite.quickQuery",
                    "group": "sqlite"
                },
                {
                    "command": "sqlite.runDocumentQuery",
                    "when": "editorLangId =~ /(sql|sqlite)/",
                    "group": "sqlite"
                },
                {
                    "command": "sqlite.useDatabase",
                    "when": "editorLangId =~ /(sql|sqlite)/",
                    "group": "sqlite"
                },
                {
                    "command": "sqlite.runSqliteMasterQuery",
                    "when": "false"
                },
                {
                    "command": "sqlite.runTableQuery",
                    "when": "false"
                },
                {
                    "command": "sqlite.explorer.copyName",
                    "group": "sqlite",
                    "when": "false"
                },
                {
                    "command": "sqlite.explorer.copyPath",
                    "group": "sqlite",
                    "when": "false"
                },
                {
                    "command": "sqlite.explorer.copyRelativePath",
                    "group": "sqlite",
                    "when": "false"
                },
                {
                    "command": "sqlite.newQuerySelect",
                    "group": "sqlite",
                    "when": "false"
                },
                {
                    "command": "sqlite.newQueryInsert",
                    "group": "sqlite",
                    "when": "false"
                }
            ],
            "explorer/context": [
                {
                    "command": "sqlite.explorer.add",
                    "when": "resourceLangId == db && !explorerResourceIsFolder",
                    "group": "navigation@1"
                },
                {
                    "command": "sqlite.newQuery",
                    "when": "resourceLangId == db",
                    "group": "0_sqlite@1"
                }
            ],
            "editor/context": [
                {
                    "when": "editorTextFocus && editorLangId =~ /(sql|sqlite)/",
                    "command": "sqlite.runDocumentQuery",
                    "group": "9.1_sqlite@1"
                },
                {
                    "when": "editorTextFocus && editorLangId =~ /(sql|sqlite)/",
                    "command": "sqlite.useDatabase",
                    "group": "9.1_sqlite@2"
                }
            ],
            "view/title": [
                {
                    "command": "sqlite.newQuery",
                    "when": "view == sqlite.explorer",
                    "group": "navigation@1"
                },
                {
                    "command": "sqlite.explorer.refresh",
                    "when": "view == sqlite.explorer",
                    "group": "navigation@2"
                }
            ],
            "view/item/context": [
                {
                    "command": "sqlite.newQuery",
                    "when": "view == sqlite.explorer && viewItem == sqlite.databaseItem",
                    "group": "inline@1"
                },
                {
                    "command": "sqlite.runSqliteMasterQuery",
                    "when": "view == sqlite.explorer && viewItem == sqlite.databaseItem",
                    "group": "1_query@1"
                },
                {
                    "command": "sqlite.newQuery",
                    "when": "view == sqlite.explorer && viewItem == sqlite.databaseItem",
                    "group": "2_sql@1"
                },
                {
                    "command": "sqlite.explorer.copyPath",
                    "when": "view == sqlite.explorer && viewItem == sqlite.databaseItem",
                    "group": "3_copy@1"
                },
                {
                    "command": "sqlite.explorer.copyRelativePath",
                    "when": "view == sqlite.explorer && viewItem == sqlite.databaseItem",
                    "group": "3_copy@2"
                },
                {
                    "command": "sqlite.explorer.remove",
                    "when": "view == sqlite.explorer && viewItem == sqlite.databaseItem",
                    "group": "4_utils@1"
                },
                {
                    "command": "sqlite.runTableQuery",
                    "when": "view == sqlite.explorer && viewItem == sqlite.tableItem",
                    "group": "inline@1"
                },
                {
                    "command": "sqlite.runTableQuery",
                    "when": "view == sqlite.explorer && viewItem == sqlite.tableItem",
                    "group": "1_query@1"
                },
                {
                    "command": "sqlite.newQuerySelect",
                    "when": "view == sqlite.explorer && viewItem == sqlite.tableItem",
                    "group": "2_sql@1"
                },
                {
                    "command": "sqlite.newQueryInsert",
                    "when": "view == sqlite.explorer && viewItem == sqlite.tableItem",
                    "group": "2_sql@2"
                },
                {
                    "command": "sqlite.explorer.copyName",
                    "when": "view == sqlite.explorer && viewItem == sqlite.tableItem",
                    "group": "3_copy@1"
                },
                {
                    "command": "sqlite.explorer.copyName",
                    "when": "view == sqlite.explorer && viewItem == sqlite.columnItem",
                    "group": "3_copy@1"
                }
            ]
        },
        "languages": [
            {
                "id": "sqlite",
                "aliases": [
                    "SQLite",
                    "SQLite3"
                ],
                "firstLine": "\\s*--\\s*(sql|SQL)ite",
                "extensions": [
                    ".sql",
                    ".sql3"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "db",
                "aliases": [
                    "Database"
                ],
                "extensions": [
                    ".db",
                    ".db3",
                    ".sdb",
                    ".s3db",
                    ".sqlite",
                    ".sqlite3"
                ]
            }
        ],
        "grammars": [
            {
                "language": "sqlite",
                "scopeName": "source.sql.sqlite",
                "path": "./syntaxes/sqlite.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "SQLite extension configuration",
            "additionalProperties": false,
            "properties": {
                "sqlite.sqlite3": {
                    "description": "SQLite3 command or binaries path.",
                    "type": "string",
                    "default": ""
                },
                "sqlite.logLevel": {
                    "description": "Logging level in the output channel (DEBUG, INFO, WARN, ERROR)",
                    "type": "string",
                    "enum": [
                        "DEBUG",
                        "INFO",
                        "WARN",
                        "ERROR"
                    ],
                    "default": "INFO"
                },
                "sqlite.recordsPerPage": {
                    "description": "Number of records to show per page. (-1 to show all records)",
                    "type": "number",
                    "minimum": -1,
                    "default": 50
                },
                "sqlite.databaseConfig": {
                    "markdownDescription": "Configure workspace databases by glob pattern. For example:\n\n`\"**/*/*.db\": { ... }`\n\nwill define the configuration used for every database in the workspace with extension `.db` (that is every database that matches the glob).\n\nUse `[default]` to define the base configuration for every database.\n\n**Note:** The configurations are incremental.",
                    "type": "object",
                    "default": {
                        "[default]": {
                            "tableQuery": {
                                "*": {
                                    "columnsReplace": {
                                        "replace": "hex(${column})",
                                        "when": "type == binary || type == blob || type == guid || type == none"
                                    }
                                }
                            }
                        }
                    },
                    "propertyNames": {
                        "minLength": 1
                    },
                    "patternProperties": {
                        ".*": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "enableForeignKeys": {
                                    "description": "Enable Foreign keys",
                                    "type": "boolean",
                                    "default": "false"
                                },
                                "attachDatabases": {
                                    "description": "",
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": false,
                                        "required": [
                                            "path",
                                            "alias"
                                        ],
                                        "properties": {
                                            "path": {
                                                "description": "",
                                                "type": "string"
                                            },
                                            "alias": {
                                                "description": "",
                                                "type": "string"
                                            }
                                        }
                                    }
                                },
                                "executeAfterOpen": {
                                    "markdownDescription": "Execute this queries right after you open the database. The results of this queries won't be returned. \n\n**Note:** This queries will effectevely be executed every time you run a query, since when running a query you open the database, run the query and then close the database.",
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "executeBeforeClose": {
                                    "markdownDescription": "Execute this queries before closing the database.",
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "executeBeforeStatement": {
                                    "markdownDescription": "",
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "query": {
                                            "markdownDescription": "",
                                            "type": "string"
                                        },
                                        "when": {
                                            "markdownDescription": "",
                                            "type": "string"
                                        }
                                    }
                                },
                                "executeAfterStatement": {
                                    "markdownDescription": "",
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "query": {
                                            "markdownDescription": "",
                                            "type": "string"
                                        },
                                        "when": {
                                            "markdownDescription": "",
                                            "type": "string"
                                        }
                                    }
                                },
                                "tableQuery": {
                                    "description": "Configuration of 'Show Table'.",
                                    "type": "object",
                                    "propertyNames": {
                                        "minLength": 1
                                    },
                                    "patternProperties": {
                                        ".*": {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "properties": {
                                                "limit": {
                                                    "markdownDescription": "Limit the number of records (-1 to not limit). For example:\n\n`\"limit\": 100`\n\nwill result in a query like:\n\n`SELECT [columns] FROM [table] LIMIT 100;`",
                                                    "type": "integer",
                                                    "minimum": -1,
                                                    "default": -1
                                                },
                                                "offset": {
                                                    "markdownDescription": "",
                                                    "type": "integer",
                                                    "minimum": -1,
                                                    "default": -1
                                                },
                                                "orderBy": {
                                                    "markdownDescription": "",
                                                    "type": "string"
                                                },
                                                "appendSql": {
                                                    "markdownDescription": "Append a string after the select. For example:\n\n`\"appendSql\": \"JOIN [other_table] ON [condition]\"`\n\nwill result in a query like:\n\n`SELECT [columns] FROM [table] JOIN [other_table] ON [condition];`",
                                                    "type": "string"
                                                },
                                                "columnsAdd": {
                                                    "markdownDescription": "",
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                },
                                                "columnsRemove": {
                                                    "markdownDescription": "",
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                },
                                                "columnsReplace": {
                                                    "markdownDescription": "",
                                                    "type": "array",
                                                    "items": {
                                                        "type": "object",
                                                        "additionalProperties": false,
                                                        "required": ["replace", "when"],
                                                        "properties": {
                                                            "replace": {
                                                                "markdownDescription": "",
                                                                "type": "string"
                                                            },
                                                            "when": {
                                                                "markdownDescription": "",
                                                                "type": "string"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile && npm run build-html",
        "compile": "tsc -p ./",
        "install-html": "cd ./src/resultview/htmlcontent && npm install",
        "build-html": "cd ./src/resultview/htmlcontent && npm run build",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "jest --silent --config jest.json"
    },
    "devDependencies": {
        "@types/clipboardy": "^1.1.0",
        "@types/csv-stringify": "^1.4.3",
        "@types/jest": "^24.0.6",
        "@types/node": "^7.0.43",
        "@types/sqlite3": "^3.1.4",
        "jest": "~24.0.0",
        "sqlite3": "^4.0.6",
        "ts-jest": "~24.0.0",
        "tslint": "^5.13.0",
        "typescript": "~3.2.4",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "clipboardy": "^1.2.3",
        "csv-parser": "^2.2.0",
        "csv-stringify": "^3.1.1"
    }
}
